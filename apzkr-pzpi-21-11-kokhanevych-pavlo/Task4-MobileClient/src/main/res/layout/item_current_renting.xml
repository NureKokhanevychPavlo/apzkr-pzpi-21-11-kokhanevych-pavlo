<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/normal_margin"
    android:layout_marginTop="@dimen/small_margin"
    android:layout_marginEnd="@dimen/normal_margin"
    android:background="@drawable/item_border"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/small_padding"
    android:paddingVertical="@dimen/small_padding">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/small_margin">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/labelFullPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/opensans_semibold"
            android:lines="1"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/text_begin_renting"
            android:textColor="@color/item_name_color"
            android:textSize="@dimen/size_name_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/labelArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/opensans_semibold"
            android:lines="1"
            android:text="@string/text_end_renting"
            android:textColor="@color/item_name_color"
            android:textSize="@dimen/size_name_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/labelPetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/opensans_regular"
            android:lines="1"
            android:text="@string/label_pet_name"
            android:textColor="@color/item_name_color"
            android:textSize="@dimen/size_name_text"
            android:layout_marginTop="@dimen/small_margin"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/labelTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/opensans_regular"
            android:lines="1"
            android:text="Total payment:"
            android:textColor="@color/item_name_color"
            android:textSize="@dimen/size_name_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/micro_margin">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textBeginRentingItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/opensans_semibold"
            android:lines="1"
            android:layout_marginTop="@dimen/small_margin"
            android:textColor="@color/item_name_color"
            android:textSize="@dimen/size_name_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/opensans_semibold"
            android:lines="1"
            android:textColor="@color/item_name_color"
            android:textSize="@dimen/size_name_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textPetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/opensans_regular"
            android:lines="1"
            android:textColor="@color/item_name_color"
            android:textSize="@dimen/size_name_text"
            android:layout_marginTop="@dimen/small_margin"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/opensans_regular"
            android:lines="1"
            android:textColor="@color/item_name_color"
            android:textSize="@dimen/size_name_text" />
    </LinearLayout>
</LinearLayout>