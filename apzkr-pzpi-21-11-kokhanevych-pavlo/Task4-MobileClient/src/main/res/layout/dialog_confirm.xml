<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/normal_padding"
    android:paddingVertical="@dimen/small_padding"
    android:layout_marginHorizontal="@dimen/dialog_margin_horizontal"
    android:background="#360A51">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/labelSure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:text="@string/text_sure"
            android:textAlignment="center"
            android:textColor="@color/profile_title"
            android:textSize="@dimen/size_title_text"
            android:layout_marginStart="@dimen/margin_label"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/large_margin"
            android:layout_marginVertical="@dimen/normal_margin"
            android:paddingHorizontal="@dimen/small_padding"
            android:background="@drawable/bg_button"
            android:fontFamily="@font/opensans_semibold"
            android:text="@string/text_confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/size_name_text"
            android:textAlignment="center"
            android:paddingVertical="@dimen/normal_padding" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_marginStart="@dimen/small_margin"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cancel" />
    </LinearLayout>
</LinearLayout>